    {
      "name": "Test: tests/interface/exec_task_test.py",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "args": [
        "--capture=sys",
        "--log-cli-level=DEBUG",
        "tests/interface/exec_task_test.py"
      ]
